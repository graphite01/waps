<%= month_calendar events: @confirm do |date, confirm| %>
  <%= date.day %>
    <% confirm.each do |confirm| %>
      <div class="hope-edit">
        <%= link_to edit_confirm_path(confirm) do%>
          <%= confirm.user.name %>
          <%= confirm.work_status.name %>
          <% if confirm.work_status.name == "出勤" %><br>
            <%= "#{confirm.start_time.hour}時" %>
            <% if confirm.start_time.min != 00 %>
              <%= "#{confirm.start_time.min}分" %>
            <% end %>
            <%= "~ #{confirm.end_time.hour}時" %>
            <% if confirm.start_time.min != 00 %>
              <%= "#{confirm.end_time.min}分" %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% end %>
<% end %>