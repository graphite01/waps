<%= form_with model: @confirm, class:"create-form-table-date", local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
    <div class="right-table-create">
      <div class="create-form-username">
        <%= f.label :"従業員名"%>
        <%= f.collection_select(:user_id, User.all, :id, :name, :include_blank => true) %>
      </div>
      <div class="create-form-works-status">
        <%= f.label :"勤務状態"%>
        <%= f.collection_select(:work_status_id, WorkStatus.all, :id, :name, {}, {class:"work_status", id:"work_status"}) %>
      </div>
      <div class="create-form-content">
        <%= f.label :"詳細" %>
        <%= f.text_field :content %>
      </div>
    </div>
    <div class="left-table-create">
      <div class="s-create-form-time">
        <%= f.label :"出勤時間" %>
        <%= f.datetime_select :start_time, minute_step: 5 %>
      </div>

      <div class="e-create-form-time">
        <%= f.label :"退勤時間" %>
        <%= f.datetime_select :end_time, minute_step: 5 %>
      </div>

      <div class="create-form-submit">
        <%= f.submit %>
      </div>
    </div>
<% end %>
