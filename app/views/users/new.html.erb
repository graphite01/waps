<%= render "shared/second-header"%>
<div class='registration-main'>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        登録方法
      </h1>
    </div>
    <div class="mail-registration-link">
      <%= link_to new_user_registration_path, method: :get do %>
        <div class="e-mail-icon-image">
          <%= image_tag "e-mail-icon.png"%>
          <div class="email-registration-titles">
            メールアドレスで登録
          </div>
        </div>
      <% end %>
    </div>
    <div class="google-registration-link">
      <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post do %>
        <div class="google-icon-image">
          <%= image_tag "google-icon.png"%>
          <div class="google-registration-titles">
            Googleアカウントで登録
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "shared/second-footer"%>