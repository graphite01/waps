<%= render "shared/second-header"%>
<div id="user-show-calendar">
  <%= render "shared/user-show_calendar", confirm: @confirm%>
</div>
<div class="user-main">
  <div class="user-inner">
    <div class="user__wrapper">
      <h2 class="user-page-heading">
        <%= "#{@user.name}さんの情報"%>
      </h2>
      <table class="user-table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">email</th>
            <td class="table__col2"><%= @user.email %></td>
          </tr>
          <tr>
            <th class="table__col1">役職</th>
            <td class="table__col2"><%= @user.position %></td>
          </tr>
          <tr>
            <th class="table__col1">アカウント権限</th>
            <td class="table__col2"><%= @user.account_type.name %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="user-edit-page-button">
      <%= link_to "ユーザー情報の修正", edit_user_path(current_user) %>
    </div>
  </div>
</div>
<%= render "shared/second-footer"%>